{{#contentFor "scripts"}}
<script>
    Object.keys(trending).forEach(key => {
        const anchorId = key.replace(/link|title/, '');
        const trendingAnchor = document.getElementById(anchorId);

        if (key.includes('link')) {
            trendingAnchor.href = trending[key]
        } else if (key.includes('title')) {
            trendingAnchor.textContent = trending[key];
        }
    });
</script>
