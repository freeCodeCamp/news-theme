{{!-- Everything inside the #author tags pulls data from the post --}}

<div class="social-row">
    <button class="twitter"
        onclick="window.open('https://twitter.com/share?text={{encode title}}{{#primary_author}}{{#if twitter}}%20by%20{{twitter}}{{/if}}{{/primary_author}}&amp;url={{url absolute="true"}}', 'share-twitter', 'width=550,height=235');return false;">
        {{> "icons/twitter"}} &nbsp;Tweet this to your followers</button>
    <div></div>
    <button class="email"
        onclick="window.location.href = 'mailto:?subject=Checkout this artilce from FreeCodeCamp &amp;body={{title}} {{url absolute="true"}}';">
        {{> "icons/email"}} Email this to a friend </button>

    {{#primary_author}}
    <div></div>
    <button class="facebook"
        onclick="window.open('https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}', 'share-facebook','width=580,height=296');return false;">
        {{> "icons/facebook"}} Share this with your friends</button>
    {{/primary_author}}
</div>