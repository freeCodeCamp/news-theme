{
    "name": "freecodecamp-news-theme",
    "description": "The Ghost theme for https://www.freecodecamp.org/news",
    "demo": "https://www.freecodecamp.org/news",
    "version": "2.9.0",
    "engines": {
        "ghost": ">=2.0.0",
        "ghost-api": "v3"
    },
    "license": "MIT",
    "scripts": {
        "develop": "gulp",
        "dev": "npm run develop",
        "zip": "gulp zip",
        "test": "gscan .",
        "test:ci": "gscan --fatal --verbose .",
        "start-ghost": "cd ../../.. && ghost start"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/freeCodeCamp/news-theme.git"
    },
    "bugs": "https://github.com/freeCodeCamp/news-theme/issues",
    "contributors": [
        "https://github.com/freeCodeCamp/news-theme/graphs/contributors"
    ],
    "author": {
        "email": "team@freecodecamp.org",
        "name": "freeCodeCamp.org",
        "url": "https://www.freecodecamp.org"
    },
    "keywords": [
        "ghost-theme"
    ],
    "devDependencies": {
        "@babel/core": "7.16.0",
        "@babel/preset-env": "7.16.4",
        "@freecodecamp/eslint-config": "2.0.2",
        "autoprefixer": "10.4.0",
        "babel-eslint": "10.1.0",
        "cssnano": "5.0.16",
        "eslint": "8.3.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-import": "2.25.3",
        "eslint-plugin-prefer-object-spread": "1.2.1",
        "eslint-plugin-prettier": "4.0.0",
        "eslint-plugin-react": "7.27.1",
        "gscan": "4.13.0",
        "gulp": "4.0.2",
        "gulp-babel": "8.0.0",
        "gulp-filter": "7.0.0",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "9.0.1",
        "gulp-sourcemaps": "3.0.0",
        "gulp-uglify": "3.0.2",
        "gulp-util": "3.0.8",
        "gulp-watch": "5.0.1",
        "gulp-zip": "5.1.0",
        "postcss": "8.4.0",
        "postcss-color-function": "4.1.0",
        "postcss-custom-properties": "12.0.0",
        "postcss-easy-import": "3.0.0",
        "prettier": "2.4.1"
    },
    "browserslist": [
        "defaults"
    ],
    "config": {
        "posts_per_page": 25,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "profile": {
                "width": 150
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1000
            },
            "xl": {
                "width": 2000
            }
        }
    }
}
